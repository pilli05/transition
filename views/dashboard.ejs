<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checklist Dashboard</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <h1>Checklist Dashboard</h1>
      <table>
        <thead>
          <tr>
            <th>Condition</th>
            <th>Description</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach((result) => { %>
          <tr>
            <td><%= result.rule %></td>
            <td><%= result.description %></td>
            <td class="<%= result.status === 'Passed' ? 'passed' : 'failed' %>">
              <%= result.status %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
